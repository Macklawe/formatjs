{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.intl", "es2017.intl", "es2018.intl"],
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@formatjs/*": [
        "packages/*",
        "bazel-out/k8-fastbuild/bin/packages/*",
        "bazel-out/darwin-fastbuild/bin/packages/*",
        "bazel-out/x64_windows-fastbuild/bin/packages/*",
        "bazel-out/k8-dbg/bin/packages/*",
        "bazel-out/darwin-dbg/bin/packages/*",
        "bazel-out/x64_windows-dbg/bin/packages/*"
      ],
      "formatjs-extract-cldr-data": [
        "packages/formatjs-extract-cldr-data",
        "bazel-out/k8-fastbuild/bin/packages/formatjs-extract-cldr-data",
        "bazel-out/darwin-fastbuild/bin/packages/formatjs-extract-cldr-data",
        "bazel-out/x64_windows-fastbuild/bin/packages/formatjs-extract-cldr-data",
        "bazel-out/k8-dbg/bin/packages/formatjs-extract-cldr-data",
        "bazel-out/darwin-dbg/bin/packages/formatjs-extract-cldr-data",
        "bazel-out/x64_windows-dbg/bin/packages/formatjs-extract-cldr-data"
      ],
      "intl-messageformat-parser": ["packages/intl-messageformat-parser"],
      "intl-messageformat": ["packages/intl-messageformat"]
    }
  },
}
